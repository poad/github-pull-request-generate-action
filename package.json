{
  "name": "github-pull-request-generate-action",
  "private": true,
  "version": "1.0.1",
  "repository": "https://github.com/poad/github-pull-request-generate-action.git",
  "author": "Kenji Saito <ken-yo@mbr.nifty.com>",
  "license": "MIT",
  "main": "./dist/main.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "format-check": "rome format src",
    "format": "rome format --write src",
    "check": "rome check src",
    "check-fix": "rome check --apply src",
    "lint": "yarn format-check && yarn check",
    "lint-fix": "yarn format && yarn check-fix",
    "test": "NODE_ENV=test jest --coverage --passWithNoTests --detectOpenHandles",
    "package": "ncc build --source-map --license licenses.txt -m -q",
    "clean": "rm -rf dist",
    "prepackage": "yarn build",
    "prebuild": "yarn clean && yarn lint-fix",
    "preclean": "yarn install"
  },
  "devDependencies": {
    "@types/jest": "*",
    "@types/node": "*",
    "@vercel/ncc": "*",
    "rome": "*",
    "jest": "*",
    "jest-circus": "*",
    "nock": "*",
    "ts-jest": "*",
    "typescript": "*"
  },
  "dependencies": {
    "@actions/core": "*",
    "@octokit/core": "*",
    "graphql": "*",
    "graphql-request": "*"
  },
  "peerDependencies": {
    "@actions/core": "*",
    "@octokit/core": "*",
    "graphql": "*",
    "graphql-request": "*"
  },
  "exports": {
    ".": {
      "node": "./dist/main.js",
      "default": "./dist/main.js"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "clearMocks": true,
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "testRunner": "jest-circus/runner",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "modulePaths": [
      "<rootDir>/dist",
      "<rootDir>/node_modules"
    ],
    "globals": {
      "ts-jest": {
        "useESM": false,
        "tsconfig": "tsconfig.json"
      }
    },
    "verbose": true
  }
}
