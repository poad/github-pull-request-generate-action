{
  "name": "github-pull-request-generate-action",
  "private": true,
  "version": "1.1.2",
  "repository": "https://github.com/poad/github-pull-request-generate-action.git",
  "author": "Kenji Saito <ken-yo@mbr.nifty.com>",
  "license": "MIT",
  "main": "./dist/main.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "format-check": "biome format src",
    "format:fix": "biome format --write src",
    "style:check": "biome check src",
    "style:fix": "biome check --apply-unsafe src",
    "lint": "pnpm run --parallel /.*:check/",
    "lint-fix": "pnpm run /.*:fix/",
    "test": "NODE_ENV=test jest --coverage --passWithNoTests",
    "package": "ncc build --source-map --license licenses.txt -m -q",
    "clean": "rm -rf dist",
    "prepackage": "pnpm build",
    "prebuild": "pnpm clean && pnpm lint-fix",
    "preclean": "pnpm install"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.1",
    "@jest/globals": "^29.7.0",
    "@swc/core": "^1.5.2",
    "@swc/jest": "^0.2.36",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "@vercel/ncc": "^0.38.1",
    "jest": "^29.7.0",
    "nock": "^13.5.4",
    "regenerator-runtime": "^0.14.1",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@octokit/core": "^5.2.0",
    "@octokit/graphql": "^7.1.0",
    "graphql": "^16.8.1"
  },
  "exports": {
    ".": {
      "node": "./dist/main.js",
      "default": "./dist/main.js"
    }
  },
  "jest": {
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": "@swc/jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(?:.pnpm/)?.+)"
    ]
  },
  "engines": {
    "npm": "use pnpm please!",
    "pnpm": ">=8.7.1"
  }
}
